<h2>Export</h2>

<form class="form-horizontal" id="redisExportForm">
  <div class="control-group">
    <label class="control-label" for="connectionExportField">Connection</label>
    <div class="controls">
      <select name="connection" class="redisDumpSelect">
        <% connections.forEach(function(connection, index) {%>
        <% if (index == 0) { %>
        <option value="<%=connection.options.host%>:<%=connection.options.port%>:<%=connection.options.db %>"><%=connection.label%> (<%=connection.options.host%>:<%=connection.options.port%>:<%=connection.options.db %>)</option>
        <% } else { %>
        <option value="<%=connection.options.host%>:<%=connection.options.port%>:<%=connection.options.db %>"><%=connection.label%> (<%=connection.options.host%>:<%=connection.options.port%>:<%=connection.options.db %>)</option>
        <% }}); %>
      </select>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Data type</label>
    <div class="controls">
      <label class="radio">
        <input type="radio" name="type" value="redis" checked>
        Redis
      </label>
      <label class="radio">
        <input type="radio" name="type" value="json">
        JSON
      </label>
    </div>
  </div>
  <!--<div class="control-group">
    <label class="control-label" for="compressExportField">Compress</label>
    <div class="controls">
      <input type="checkbox" name="compress" value="1" id="compressExportField">
    </div>
  </div>-->
  <div class="control-group">
    <div class="controls">
      <input type="submit" class="btn btn-primary" value="Export">
    </div>
  </div>
</form>
