<!DOCTYPE html>
<html>
<head>
  <title>Redis Commander: <%= title %></title>
  <link href="/bootstrap/css/bootstrap.css" rel="stylesheet"/>
  <style type="text/css">
    body {
      padding-top: 60px;
      padding-bottom: 40px;
    }
  </style>
  <link href="/bootstrap/css/bootstrap-responsive.css" rel="stylesheet"/>
  <link href="/css/default.css" rel="stylesheet"/>
  <script src="/scripts/jquery-1.7.2.js"></script>
  <script src="/jstree/jquery.jstree.js"></script>
  <script src="/scripts/jquery.form.js"></script>
  <script src="/scripts/ejs.js"></script>
  <script src="/scripts/dateformat.js"></script>
  <script src="/scripts/countdown.js"></script>
  <script src="/scripts/redisCommander.js"></script>
  <script src="/bootstrap/js/bootstrap.js"></script>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">Redis Commander</a>

      <ul class="nav">
        <li class="active"><a href="/">Home</a></li>
      </ul>

      <div style="float: right;">
        <% if(isLoggedIn()) { %>
          <form action="/logout" method="POST" class="form-inline" style="margin-bottom: 0;">
            <input type="submit" id="logoutButton" class='btn btn-primary' value='Logout'>
          </form>
        <% } else { %>
          <a href="/login" id="loginButton" class='btn btn-primary'>Login</a>
        <% } %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <% var flashes = getFlashes(); %>
  <% for(var flashType in flashes) { %>
    <% flashes[flashType].forEach(function (flash) { %>
      <div class="alert alert-block <%= flashType === 'error' ? 'alert-error' : '' %> fade in">
        <button class="close" data-dismiss="alert">Ã—</button>
        <%= flash %>
      </div>
    <% }) %>
  <% } %>

  <%- body %>
</div>
</body>
</html>
